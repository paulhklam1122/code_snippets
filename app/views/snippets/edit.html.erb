<h1>Edit snippet</h1>
<%= @snippet.errors.full_messages.join(",") %>
<%= bootstrap_form_for @snippet do |f| %>
  <p>Category <%= f.collection_select :category_id, Category.all, :id, :name %>
    <%= f.check_box(:private) %>
  </p>
  <%= f.text_field :title %><br>
  <%= f.text_area :work %><br>
  <%= f.submit %>
<% end %>
