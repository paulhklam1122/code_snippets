<h1>Create new snippet</h1>
<%= @snippet.errors.full_messages.join(",") %>
<%= bootstrap_form_for @snippet do |f| %>
  <div class="text-left" >
    <p>
      <%= f.collection_select :category_id, Category.all, :id, :name %>
      <%= f.check_box(:private) %>
    </p>
    <%= f.text_field :title %><br>
    <%= f.text_area :work %><br>
  </div>
    <%= f.submit class: "btn btn-primary" %>
<% end %>
